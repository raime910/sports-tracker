@model PasswordLostVm

@{
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!-- Password recovery -->
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="panel panel-body login-form">
		<div class="text-center">
			<div class="icon-object border-warning text-warning">
				<i class="icon-lock"></i>
			</div>
			<h5 class="content-group">Password recovery <small class="display-block">We'll send the password change token to your email</small></h5>
		</div>

		<div class="form-group has-feedback">
			@Html.TextBoxFor(x => x.Email, new { @placeholder = "Email address", @class = "form-control" })
			<div class="form-control-feedback">
				<i class="icon-mail5 text-muted"></i>
			</div>
			@Html.ValidationMessageFor(x => x.Email)
		</div>

		<button type="submit" class="btn bg-primary btn-block btn-lg">Send <i class="icon-circle-right2 position-right"></i></button>
	</div>
}
<!-- /password recovery -->