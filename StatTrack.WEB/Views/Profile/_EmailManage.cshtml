@model EmailManageVm

<div id="_emailAddressManage" class="ajax-form">
	@using (Ajax.BeginForm("EmailManage", new AjaxOptions
	{
		InsertionMode = InsertionMode.Replace,
		UpdateTargetId = "_emailAddressManage",
		OnSuccess = "$('#_emailAddressSuccess').slideToggle();",
		HttpMethod = HTTP_POST
	}))
	{

	@Html.AntiForgeryToken()

		<div class="panel panel-flat">
			<div class="panel-heading">
				<h5 class="panel-title">Email Address</h5>
			</div>

			<div class="panel-body">

				<div id="_emailAddressSuccess" class="row displayNone">
					<div class="col-lg-12">
						<div class="alert alert-success no-border">
							<button type="button" class="close" data-dismiss="alert"><span>×</span><span class="sr-only">Close</span></button>
							<span class="text-semibold">Success!</span> Your email address has been saved. An email verification link has been sent out to your new email address.
						</div>
					</div>
				</div>

				@Html.StggValidationSummary()

				<div class="form-group">
					@Html.LabelFor(x => x.UserName):
					@Html.TextBoxFor(x => x.UserName, new { @readonly = "", @class = "form-control" })
				</div>

				<div class="form-group">
					@Html.LabelFor(x => x.Email):
					<div class="input-group">
						<span class="input-group-addon"><i class="icon-mail5"></i></span>
						@Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Enter your email" })
					</div>
					@Html.ValidationMessageFor(x => x.Email)
				</div>

				<div class="form-group">
					@Html.LabelFor(x => x.ConfirmEmail):
					<div class="input-group">
						<span class="input-group-addon"><i class="icon-mail5"></i></span>
						@Html.TextBoxFor(x => x.ConfirmEmail, new { @class = "form-control", @placeholder = "Re-enter your email" })
					</div>
					@Html.ValidationMessageFor(x => x.ConfirmEmail)
				</div>

				<div class="text-right">
					<button type="submit" class="btn btn-primary">Save account info <i class="icon-arrow-right14 position-right"></i></button>
				</div>
			</div>
		</div>
	}
</div>