@model PersonalInfoManageVm

<div id="_personalInfoManage" class="ajax-form">
	@using (Ajax.BeginForm("PersonalInfoManage", new AjaxOptions
	{
		InsertionMode = InsertionMode.Replace,
		UpdateTargetId = "_personalInfoManage",
		OnSuccess = "$('#_personalInfoSuccess').slideToggle();",
		HttpMethod = HTTP_POST
	}))
	{

	@Html.AntiForgeryToken()

		<div class="panel panel-flat">
			<div class="panel-heading">
				<h5 class="panel-title">Personal Information</h5>
			</div>

			<div class="panel-body">

				<div id="_personalInfoSuccess" class="row displayNone">
					<div class="col-lg-12">
						<div class="alert alert-success no-border">
							<button type="button" class="close" data-dismiss="alert"><span>×</span><span class="sr-only">Close</span></button>
							<span class="text-semibold">Success!</span> Your personal information has been saved.
						</div>
					</div>
				</div>

				@Html.StggValidationSummary()

				<div class="form-group">
					@Html.LabelFor(x => x.FirstName):
					<div class="input-group">
						<span class="input-group-addon"><i class="icon-info22"></i></span>
						@Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "Enter your first name" })
					</div>
					@Html.ValidationMessageFor(x => x.FirstName)
				</div>

				<div class="form-group">
					@Html.LabelFor(x => x.LastName):
					<div class="input-group">
						<span class="input-group-addon"><i class="icon-info22"></i></span>
						@Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Enter your last name" })
					</div>
					@Html.ValidationMessageFor(x => x.LastName)
				</div>

				<div class="form-group">
					@Html.LabelFor(x => x.BirthDate):
					<div class="input-group">
						<span class="input-group-addon"><i class="icon-calendar22"></i></span>
						@Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control anytime-month-numeric" })
					</div>
					@Html.ValidationMessageFor(x => x.BirthDate)
				</div>

				<div class="form-group">
					@Html.LabelFor(x => x.Bio):
					@Html.TextAreaFor(x => x.Bio, new { rows = 5, cols = 5, @class = "form-control", @placeholder = "Enter your bio" })
					@Html.ValidationMessageFor(x => x.Bio)
				</div>

				<div class="form-group">
					<div class="checkbox">
						<label>
							@Html.CheckBoxFor(x => x.SubscribeNewsletter, new { @class = "style" })
							Subscribe to StatTrack newsletter
						</label>
					</div>
				</div>

				<div class="text-right">
					<button type="submit" class="btn btn-primary">Save personal info<i class="icon-arrow-right14 position-right"></i></button>
				</div>

			</div>
		</div>
	}
</div>